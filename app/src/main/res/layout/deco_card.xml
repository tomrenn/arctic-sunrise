<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/deco_card_height"
    android:layout_margin="10dp"
    app:contentPadding="5dp"
    tools:layout_marginTop="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:contentDescription="basic image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="#777"/>

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/card_transparent_white"
            android:padding="10dp"
            tools:text="Robotic uprising has begun"
            android:textStyle="bold"
            android:textSize="16sp"

            />


    </RelativeLayout>

</android.support.v7.widget.CardView>