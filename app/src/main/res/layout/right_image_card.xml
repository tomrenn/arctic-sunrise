<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_margin="10dp"
    app:contentPadding="5dp"
    tools:layout_marginTop="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/card_image_width"
            android:layout_marginEnd="@dimen/card_image_width"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="Robotic uprising has begun"/>

        <TextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/card_image_width"
            android:layout_marginEnd="@dimen/card_image_width"
            android:layout_below="@id/headline"
            android:ellipsize="end"
            android:overScrollMode="never"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas volutpat ligula ante, eget ultricies dolor rhoncus vitae. Praesent elementum dui sed elit consequat, in tempus quam tempus. Vivamus non aliquam libero. Praesent sollicitudin pretium nunc, eget varius nisi vestibulum at. Ut lobortis commodo porttitor" />

        <ImageView
            android:id="@+id/image"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="basic image"
            android:layout_width="@dimen/card_image_width"
            android:layout_height="match_parent" />

    </RelativeLayout>

</android.support.v7.widget.CardView>